{
  "name": "@osjs/ldap-auth",
  "version": "1.0.0",
  "description": "OS.js v3 LDAP authentication provider adapter",
  "main": "index.js",
  "scripts": {
    "test": "npm run eslint && npm run jest",
    "jest": "jest",
    "eslint": "eslint *.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andersevenrud/osjs-pam-auth.git"
  },
  "keywords": [
    "osjs"
  ],
  "author": "Anders Evenrud <andersevenrud@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/andersevenrud/osjs-ldap-auth/issues"
  },
  "homepage": "https://github.com/andersevenrud/osjs-ldap-auth#readme",
  "dependencies": {
    "ldapts": "^1.5.0",
    "lodash.merge": "^4.6.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8
    },
    "globals": {
      "Promise": true,
      "ArrayBuffer": true,
      "File": true,
      "Blob": true,
      "OSjs": true,
      "OSJS_VERSION": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "linebreak-style": ["error", "unix"],
      "semi": ["error", "always"],
      "indent": ["error", 2],
      "radix": 1,
      "eol-last": ["error", "always"],
      "consistent-return": 1,
      "space-in-parens": ["error", "never"],
      "space-before-function-paren": ["error", {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
      }],
      "space-before-blocks": ["error", "always"],
      "space-infix-ops": ["error", {"int32Hint": false}],
      "space-unary-ops": ["error", {"words": true, "nonwords": false}],
      "spaced-comment": ["warn", "always"],
      "prefer-arrow-callback": 1,
      "prefer-spread": 1,
      "prefer-rest-params": 1,
      "template-curly-spacing": ["warn", "never"],
      "no-unused-vars": ["error", {"vars": "all", "args": "none"}],
      "no-useless-constructor": 1,
      "no-var": 2,
      "no-duplicate-imports": 2,
      "no-console": "off",
      "no-extra-semi": 2,
      "no-eval": 2,
      "no-invalid-this": 1,
      "no-new-func": 2,
      "no-return-await": 1,
      "no-self-compare": 2,
      "no-with": 2,
      "no-multi-assign": 1,
      "no-new-object": 2,
      "no-tabs": 1
    }
  }
}
